    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Elevate: HI-ML-AZURE Local",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hi-ml-azure/src/health/azure/examples/elevate_this.py",
            "env": {"PYTHONPATH": "${workspaceRoot}/hi-ml-azure/src"},
            "cwd": "${workspaceFolder}/hi-ml-azure/src/health/azure/examples/",
            "args": 
            [
                "--message='Hello World :-)'"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Elevate: HI-ML-AZURE AML",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hi-ml-azure/src/health/azure/examples/elevate_this.py",
            "env": {"PYTHONPATH": "${workspaceRoot}/hi-ml-azure/src"},
            "cwd": "${workspaceFolder}/hi-ml-azure/src/health/azure/examples/",
            "args": 
            [
                "--message='Hello World :-)'",
                "--azureml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: HI-ML-AZURE Setup",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hi-ml-azure/setup.py",
            "args": [
                "sdist",
                "bdist_wheel"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: HI-ML-AZURE Make Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hi-ml-azure/testhiml/health/azure/test_data/make_tests.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: HI-ML-AZURE Hyperdrive Sample",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/hi-ml-azure/docs/source/examples/8",
            "program": "${workspaceFolder}/hi-ml-azure/docs/source/examples/8/sample.py",
            "args": [
                "--azureml"
            ],
            "console": "integratedTerminal"
        }
    ]
}